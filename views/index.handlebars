<h1>Burgers</h1>

<h3>Yet to be devoured</h3>
<ul>
    {{#each burgers}}
    {{#unless devoured}}
    <li>
        <p>{{this.id}}. {{this.burger_name}} - {{this.devoured}}</p>
        <button class="devourBtn" data-id="{{this.id}}">Devour</button>
    </li>
    {{/unless}}
    {{/each}}
</ul>

<h3>Devoured</h3>
<ul>
    {{#each burgers}}
    {{#if devoured}}
    <li>
        <p>{{this.id}}. {{this.burger_name}} - {{this.devoured}}</p>
    </li>
    {{/if}}
    {{/each}}
</ul>

<h3>New Burger</h3>
<form class="new-burger">
    <div class="form-group">
        <label for="burgerName">Burger Name:</label>
        <input type="text" id="burgerName" name="name">
    </div>

    <button type="submit">Add Burger</button>
</form>