<div class="container-fluid bg-light mb-4">
    <form class="new-burger d-flex justify-content-center">
        <div id="burgerForm" class="form-row p-3">
            <div class="col mx-2">
                <input type="text" id="burgerName" class="form-control mx-3" name="name">
            </div>
            <div class="col mx-2">
                <button type="submit" class="btn btn-danger">New Burger</button>
            </div>
        </div>
    </form>
</div>

<div class="container">
    <div class="row mb-5">
        <div class="col-12 col-md-6">
            <h3 class="text-white p-3 text-center bg-secondary rounded">Burgers to eat</h3>
            <ul class="list-group list-group-flush">
                {{#each burgers}}
                {{#unless devoured}}
                <li class="d-flex justify-content-between list-group-item p-0">
                    <p class="m-0 p-3">{{this.burger_name}}</p><button class="btn btn-danger devourBtn"
                        data-id="{{this.id}}">Devour</button>
                </li>
                {{/unless}}
                {{/each}}
            </ul>
        </div>
        <div class="col-12 col-md-6">
            <h3 class="text-white p-3 text-center bg-secondary rounded">Burgers Devoured</h3>
            <ul class="list-group list-group-flush">
                {{#each burgers}}
                {{#if devoured}}
                <li class="d-flex justify-content-between list-group-item p-0">
                    <p class="m-0 p-3">{{this.burger_name}}</p>
                </li>
                {{/if}}
                {{/each}}
            </ul>

        </div>
    </div>
</div>